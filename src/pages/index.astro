                <!--/>-->
                <WarpBackground
                        color1="#000000"
                        color2="#0a0a0a"
                        color3="#111111"
                        speed={0.6}
                        swirl={0.5}
                        swirlIterations={10}
                        shapeScale={0.12}
                        client:load
                />

            </div>

            <div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
                <div>
                    <H1 size="default">DbjSystem</H1>
                    <H1 size="small" className="mt-4 max-w-xl text-white">
                        Desarrollo de software adaptado a cada <span class="font-semibold">Cliente</span>
                    </H1>
                </div>
                <div>
                    <AvailableForWork className="py-4"/>
