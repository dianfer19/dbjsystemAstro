---
import MainLayout from "../layouts/MainLayout.astro";
import WarpBackground from "../components/warp-background";
import H1 from "../components/h1.astro";
import AvailableForWork from "../components/available.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
---

<MainLayout>
    <main>
        <div class="group relative w-full min-h-dvh flex items-center justify-center">
            <div class="absolute w-full h-dvh -z-10">
                <WarpBackground
                        preset="darkWithGrayAccent"
                        swirl={0.8}
                        shapeScale={0.3}
                        client:load
                />



            </div>

            <div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
                <div>
                    <H1 size="default">DbjSystem</H1>
                    <H1 size="small" className="mt-4 max-w-xl text-white">
                        Desarrollo de software adaptado a cada <span class="font-semibold">Cliente</span>
                    </H1>
                </div>
                <div>
                    <AvailableForWork className="py-4"/>
                    <div class="mb-2 sm:mb-4 flex items-center justify-between">
                        <div class="flex items-center gap-4">
                            <Link href="#">Ll√°manos</Link>
                            <Link href="/projects" variant="secondary">Nuestro Trabajo</Link>
                        </div>

                        <Navigation client:load>
                            <Link href="/projects" variant="secondary">Proyectos</Link>
                            <Link href="/" variant="secondary">Nosotros</Link>
                            <Link href="/" variant="secondary">Contacto</Link>
                        </Navigation>
                    </div>
                </div>
            </div>
        </div>
    </main>
</MainLayout>